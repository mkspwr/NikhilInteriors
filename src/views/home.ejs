                        title: 'Gourmet Chef Kitchen',
                        description: 'Luxury Villa in Navi Mumbai'
                    }
                ],
                bedroom: [
                    {
                        src: '/resources/bedroom/bedroom1.jpg',
                        title: 'Master Bedroom',
                        description: 'Residential Project in Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom2.jpg',
                        title: 'Guest Bedroom',
                        description: 'Villa Project in Navi Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom3.jpg',
                        title: 'Kids Bedroom',
                        description: 'Apartment Project in Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom4.jpg',
                        title: 'Luxury Master Suite',
                        description: 'Penthouse in Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom5.jpg',
                        title: 'Modern Bedroom Design',
                        description: 'Contemporary Home in Navi Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom6.jpg',
                        title: 'Minimalist Bedroom',
                        description: 'Urban Apartment in Mumbai'
                    },
                    {
                        src: '/resources/bedroom/bedroom7.jpg',
                        title: 'Cozy Guest Room',
                        description: 'Family Home in Navi Mumbai'
                    }
                ]
            };
            
            // Current index for each category
            const currentIndices = {
                living: 0,
                office: 0,
                kitchen: 0,
                bedroom: 0
            };
            
            // Auto-rotation timers for each category
            const autoRotate = {};
            
            // Start auto-rotation only if elements exist
            ['living', 'office', 'kitchen', 'bedroom'].forEach(category => {
                if (document.getElementById(`${category}-carousel`)) {
                    autoRotate[category] = setInterval(() => changeImage(category, 1), 12000 + Math.random() * 9000);
                }
            });
            
            // Function to change images with smoother transitions
            window.changeImage = function(category, direction) {
                const carouselElement = document.getElementById(`${category}-carousel`);
                if (!carouselElement) {
                    console.error(`Element with ID "${category}-carousel" not found`);
                    return; // Exit if element doesn't exist
                }
                
                // Reset auto-rotation timer when user clicks
                clearInterval(autoRotate[category]);
                autoRotate[category] = setInterval(() => changeImage(category, 1), 9000 + Math.random() * 2000);
                
                // Update index
                currentIndices[category] = (currentIndices[category] + direction + portfolioImages[category].length) % portfolioImages[category].length;
                
                // Update image and text
                const imgElement = carouselElement.querySelector('img');
                const titleElement = carouselElement.querySelector('h3');
                const descElement = carouselElement.querySelector('p');
                
                if (imgElement && titleElement && descElement) {
                    const image = portfolioImages[category][currentIndices[category]];
                    
                    // Slow fade out effect
                    imgElement.style.opacity = '0';
                    imgElement.style.transition = 'opacity 1.5s ease-in-out';
                    titleElement.style.opacity = '0';
                    titleElement.style.transition = 'opacity 1s ease-in-out';
                    descElement.style.opacity = '0';
                    descElement.style.transition = 'opacity 1s ease-in-out';
                    
                    // Wait for fade out before changing content
                    setTimeout(() => {
                        // Change content
                        imgElement.src = image.src;
                        titleElement.textContent = image.title;
                        descElement.textContent = image.description;
                        
                        // Wait a moment before fading back in
                        setTimeout(() => {
                            // Slow fade in effect
                            imgElement.style.opacity = '1';
                            setTimeout(() => {
                                titleElement.style.opacity = '1';
                                descElement.style.opacity = '1';
                            }, 200); // Slight delay for text to follow image
                        }, 100);
                    }, 800); // Longer wait before changing content
                }
            };
            
            // Add image counter indicators
            ['living', 'office', 'kitchen', 'bedroom'].forEach(category => {
                const carouselElement = document.getElementById(`${category}-carousel`);
                if (!carouselElement) return;
                
                const overlay = carouselElement.querySelector('.portfolio-overlay');
                if (!overlay) return;
                
                // Create indicator container
                const indicatorDiv = document.createElement('div');
                indicatorDiv.className = 'image-indicators';
                
                // Add indicators for each image
                for (let i = 0; i < portfolioImages[category].length; i++) {
                    const indicator = document.createElement('span');
                    indicator.className = 'image-indicator';
                    indicator.dataset.index = i;
                    if (i === 0) indicator.classList.add('active');
                    
                    // Add click event to jump to specific image
                    indicator.addEventListener('click', function() {
                        const targetIndex = parseInt(this.dataset.index);
                        const currentIndex = currentIndices[category];
                        const diff = targetIndex - currentIndex;
                        changeImage(category, diff);
                        
                        // Update active indicator
                        const indicators = carouselElement.querySelectorAll('.image-indicator');
                        indicators.forEach(ind => ind.classList.remove('active'));
                        this.classList.add('active');
                    });
                    
                    indicatorDiv.appendChild(indicator);
                }
                
                // Add indicators to overlay
                overlay.appendChild(indicatorDiv);
                
                // Update indicator when image changes
                const originalChangeImage = window.changeImage;
                window.changeImage = function(cat, dir) {
                    originalChangeImage(cat, dir);
                    
                    if (cat === category) {
                        const indicators = carouselElement.querySelectorAll('.image-indicator');
                        indicators.forEach(ind => ind.classList.remove('active'));
                        indicators[currentIndices[cat]].classList.add('active');
                    }
                };
            });
        });
    </script>
