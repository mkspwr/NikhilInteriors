                    },
                    {
                        src: '/resources/office/office5.jpg',
                        title: 'Modern Meeting Room',
                        description: 'Corporate Headquarters in Navi Mumbai'
                    },
                    {
                        src: '/resources/office/office6.jpg',
                        title: 'Creative Studio Space',
                        description: 'Design Agency in Mumbai'
                    },
                    {
                        src: '/resources/office/office7.jpg',
                        title: 'Collaborative Workspace',
                        description: 'Co-working Space in Navi Mumbai'
                    },
                    {
                        src: '/resources/office/office8.jpg',
                        title: 'Executive Conference Room',
                        description: 'Financial Firm in Mumbai'
                    },
                    {
                        src: '/resources/office/office9.jpg',
                        title: 'Modern Reception Area',
                        description: 'Corporate Office in Navi Mumbai'
                    }
                ],
                kitchen: [
                    {
                        src: '/resources/kitchen/kitchen1.jpg',
                        title: 'Modern Kitchen',
                        description: 'Residential Project in Navi Mumbai'
                    },
                    {
                        src: '/resources/kitchen/kitchen2.jpg',
                        title: 'Contemporary Kitchen',
                        description: 'Apartment Project in Mumbai'
                    },
                    {
                        src: '/resources/kitchen/kitchen3.jpg',
                        title: 'Luxury Kitchen',
                        description: 'Villa Project in Navi Mumbai'
                    },
                    {
                        src: '/resources/kitchen/kitchen4.jpg',
                        title: 'Open Concept Kitchen',
                        description: 'Modern Home in Mumbai'
                    },
                    {
                        src: '/resources/kitchen/kitchen5.jpg',
                        title: 'Minimalist Kitchen Design',
                        description: 'Urban Apartment in Navi Mumbai'
